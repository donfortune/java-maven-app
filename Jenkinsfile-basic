
pipeline {
    agent any
   

    parameters {
        
        booleanParam(name: 'executeTests', defaultValue: true, description: 'run test')
        choice(name: 'VERSION', choices: ['1.2.4', '1.3.5', '1.5.0'], description: 'Choose one')
    }
    stages {
        
        stage("build") {
            steps {
                echo "Building the project"
                
            }
        }

        stage("test") {
            when {
                expression {
                    params.executeTests
                }
            }
            steps {
                echo "Testing the project"
            }
        }

        stage("deploy") {
            steps {
                
                echo "deploying  version ${params.VERSION}"
            }
        }
    }
}

